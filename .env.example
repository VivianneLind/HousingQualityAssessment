# =============================================================================
# NETWORK CONFIGURATION
# =============================================================================

# Sepolia Testnet RPC URL
# Get your free API key from: https://www.infura.io/ or https://www.alchemy.com/
SEPOLIA_RPC_URL=https://sepolia.infura.io/v3/YOUR_INFURA_PROJECT_ID

# Alternative RPC providers:
# SEPOLIA_RPC_URL=https://eth-sepolia.g.alchemy.com/v2/YOUR_ALCHEMY_KEY
# SEPOLIA_RPC_URL=https://rpc.sepolia.org

# =============================================================================
# WALLET CONFIGURATION
# =============================================================================

# Private Key (DO NOT commit real keys - use for deployment only)
# Remove 0x prefix when entering your key
PRIVATE_KEY=your_private_key_here_without_0x_prefix

# Mnemonic (Alternative to private key)
# MNEMONIC=your twelve word mnemonic phrase here

# =============================================================================
# CONTRACT VERIFICATION
# =============================================================================

# Etherscan API Key
# Get your API key from: https://etherscan.io/myapikey
ETHERSCAN_API_KEY=your_etherscan_api_key

# =============================================================================
# FRONTEND CONFIGURATION
# =============================================================================

# WalletConnect Project ID (Required for RainbowKit)
# Get your project ID from: https://cloud.walletconnect.com
VITE_WALLETCONNECT_PROJECT_ID=your_walletconnect_project_id

# Deployed Contract Address (Update after deployment)
VITE_CONTRACT_ADDRESS=0x2Bb93Efbb0B73042494D228e5b5Ca0e0705d3640

# =============================================================================
# FHEVM CONFIGURATION (Zama Fully Homomorphic Encryption)
# =============================================================================

# Gateway Address for FHEVM (Sepolia)
# Official Zama Gateway for encrypted operations
GATEWAY_ADDRESS=0x33347831500F1e73f102B789773FBb27Fe321808

# ACL (Access Control List) Address
# Manages decryption permissions for encrypted data
ACL_ADDRESS=0x9D6891A6240D6130c54ae243d8005063D05fE14b

# KMS Verifier Address (Key Management System)
# Verifies encryption keys and signatures
KMS_VERIFIER_ADDRESS=0x9D6891A6240D6130c54ae243d8005063D05fE14b

# TFHE Executor Address (Homomorphic Operations)
# Executes encrypted computations
TFHE_EXECUTOR_ADDRESS=0x05fD0fF4E0F6951CBc9AcB7D6e3d7c0D1F5b2C5e

# =============================================================================
# PAUSER CONFIGURATION (Emergency Controls)
# =============================================================================

# PauserSet Contract Address (Emergency Pause Mechanism)
# Allows authorized accounts to pause contract in case of emergency
PAUSER_CONTRACT_ADDRESS=0x0000000000000000000000000000000000000000

# Pauser Admin Address (Can add/remove pausers)
PAUSER_ADMIN_ADDRESS=0x0000000000000000000000000000000000000000

# Pauser Addresses (Comma-separated list)
# Multiple accounts authorized to pause the contract
PAUSER_ADDRESSES=0x0000000000000000000000000000000000000000,0x0000000000000000000000000000000000000000

# Pause Status (true/false)
# Set to true to deploy contract in paused state
INITIAL_PAUSE_STATE=false

# =============================================================================
# GAS OPTIMIZATION & REPORTING
# =============================================================================

# Gas Reporter (Set to true to enable gas usage reports)
REPORT_GAS=false

# CoinMarketCap API Key (for USD gas cost estimation)
# Get your API key from: https://pro.coinmarketcap.com/signup
COINMARKETCAP_API_KEY=your_coinmarketcap_api_key

# Gas Price Settings (in Gwei)
GAS_PRICE=20
MAX_FEE_PER_GAS=50
MAX_PRIORITY_FEE_PER_GAS=2

# =============================================================================
# TESTING CONFIGURATION
# =============================================================================

# Fork Testing (for Hardhat forking)
FORK_ENABLED=false
FORK_BLOCK_NUMBER=0

# Test Account Private Keys (for testing only)
TEST_PRIVATE_KEY_1=0xac0974bec39a17e36ba4a6b4d238ff944bacb478cbed5efcae784d7bf4f2ff80
TEST_PRIVATE_KEY_2=0x59c6995e998f97a5a0044966f0945389dc9e86dae88c7a8412f4603b6b78690d

# =============================================================================
# DEPLOYMENT CONFIGURATION
# =============================================================================

# Initial Contract Owner (receives admin privileges)
INITIAL_OWNER_ADDRESS=0x0000000000000000000000000000000000000000

# Deployment Network (sepolia, mainnet, localhost)
DEPLOYMENT_NETWORK=sepolia

# Auto-verify contract after deployment
AUTO_VERIFY=true

# =============================================================================
# MONITORING & ANALYTICS
# =============================================================================

# Tenderly Project Information (for monitoring)
TENDERLY_PROJECT_ID=
TENDERLY_USERNAME=
TENDERLY_FORK_ID=

# Defender Admin API Key (OpenZeppelin Defender)
DEFENDER_TEAM_API_KEY=
DEFENDER_TEAM_API_SECRET_KEY=

# =============================================================================
# SECURITY SETTINGS
# =============================================================================

# Rate Limiting (requests per minute)
RATE_LIMIT_PER_MINUTE=60

# Max Gas Per Transaction
MAX_GAS_PER_TX=8000000

# Contract Size Limit Check
CHECK_CONTRACT_SIZE=true
MAX_CONTRACT_SIZE=24576

# =============================================================================
# ORACLE CONFIGURATION (Zama Oracle)
# =============================================================================

# Oracle Contract Address (for decryption requests)
ORACLE_ADDRESS=0x0000000000000000000000000000000000000000

# Oracle Relayer Address
ORACLE_RELAYER_ADDRESS=0x0000000000000000000000000000000000000000

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================

# Debug Mode (verbose logging)
DEBUG=false

# Node Environment
NODE_ENV=development

# Frontend Port
VITE_PORT=5173

# =============================================================================
# NOTES
# =============================================================================
#
# 1. Never commit this file with real credentials
# 2. Keep your private keys secure - use hardware wallets for production
# 3. For production deployments, use environment-specific .env files
# 4. Update VITE_CONTRACT_ADDRESS after successful deployment
# 5. Test all configurations on Sepolia before mainnet deployment
# 6. For FHEVM addresses, refer to: https://docs.zama.ai/fhevm
# 7. PauserSet is optional - only enable if you need emergency pause functionality
#
# =============================================================================
