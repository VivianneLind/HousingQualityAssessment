{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting - relaxed for build */
    "strict": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": true,

    /* Path mapping */
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },

    /* Only load Vite types */
    "types": ["vite/client"]
  },
  "include": ["src/**/*", "src/**/*.tsx", "src/**/*.ts"],
  "exclude": [
    "node_modules",
    "dist",
    "build",
    "scripts",
    "test",
    "hardhat.config.cts",
    "tsconfig.hardhat.json",
    "tsconfig.node.json",
    "**/*.test.ts",
    "**/*.spec.ts",
    "**/*.cjs",
    "artifacts",
    "cache",
    "deployments",
    "typechain-types"
  ]
}
